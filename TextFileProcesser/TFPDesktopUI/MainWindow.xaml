<Window x:Class="TFPDesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ds="clr-namespace:TFPDesktopUI.Models"
        xmlns:local="clr-namespace:TFPDesktopUI"
        mc:Ignorable="d" FontSize="20"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <ObjectDataProvider x:Key="Results" ObjectType="{x:Type ds:TextFileResult}"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
                Grid.Row="0" Grid.ColumnSpan="3" 
                Margin="5" FontSize="28"
                Text="Text File Processing App" />

        <Button x:Name="BrowseFile" 
                Grid.Row="1" Grid.Column="0" 
                Margin="10" Padding="20 10" Click="BrowseFile_Click">
            Browse File
        </Button>
        <TextBlock x:Name="FilePath" 
                   Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                   VerticalAlignment="Center"
                   FontSize="16"
                   Margin="10" Padding="5" />

        <Button x:Name="Analyze" 
                Grid.Row="2" Grid.Column="0" 
                Margin="10" Padding="20 10" Click="Analyze_Click">
            Analyze
        </Button>
        <TextBlock x:Name="ResultMessage"
                   Grid.Row="2" Grid.Column="1"
                   Margin="10" Padding="20 10"/>

        <TextBlock x:Name="ProgressBarLabel" 
                   Grid.Row="3" Grid.Column="0" 
                   Margin="10" Padding="20 10" 
                   HorizontalAlignment="Right"
                   Text="Progress" />
        <ProgressBar x:Name="ProgressBar"
                     Grid.Row="3" Grid.Column="1" 
                     Height="28" Margin="10"
                     Value="0"/>
        <Button x:Name="Cancel" 
                Grid.Row="3" Grid.Column="2" 
                Margin="10" Padding="20 10" Click="Cancel_Click">
            Cancel
        </Button>

        <ListView x:Name="ResultList"
                  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                  Width="auto"
                  Margin="10" Padding="10"
                  ItemsSource="{Binding Source={StaticResource Results}}">
            <ListView.View>
                <GridView AllowsColumnReorder="False" ColumnHeaderToolTip="Words">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Word}" Header="Word" Width="250"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Occurrence}" Header="Occurrence" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
